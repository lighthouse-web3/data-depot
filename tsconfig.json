{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts","**/*.test.ts",".vscode",".d.ts"]
}